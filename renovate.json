{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "regexManagers": [
    {
      "fileMatch": ["(^|/)README\\.md$"],
      "matchStrings": [
        "\\s*uses:\\s*(?<depName>[^@\\s]+)@[a-f0-9]{40}\\s*#\\s*(?<currentValue>v?\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "semver"
    }
  ]
}
